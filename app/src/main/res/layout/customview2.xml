<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        app:cardBackgroundColor="#E2E6F3"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:gravity="start"
                        android:paddingStart="@dimen/_7sdp"
                        android:text="Caller ID:"
                        android:textColor="#1B1818"
                        android:textSize="@dimen/_12sdp"
                        tools:ignore="NestedWeights,RtlSymmetry" />

                    <TextView
                        android:id="@+id/contactname"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:gravity="end"
                        android:paddingEnd="@dimen/_7sdp"
                        android:text="Unknown"
                        android:textColor="#000000"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:gravity="start"
                        android:paddingStart="@dimen/_7sdp"
                        android:text="Phone No:"
                        android:textColor="#1B1818"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/numberview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight=".5"
                        android:gravity="end"
                        android:paddingEnd="@dimen/_7sdp"
                        android:text="7896208559"
                        android:textColor="#000000"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:orientation="vertical"
                android:weightSum="1">

                <com.github.nikartm.button.FitButton
                    android:id="@+id/fbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_42sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_42sdp"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_weight=".2"
                    android:gravity="center"
                    app:fb_backgroundColor="#E2E6F3"
                    app:fb_borderColor="#E2E6F3"
                    app:fb_icon="@drawable/ic_contact_us"
                    app:fb_iconHeight="@dimen/_55sdp"
                    app:fb_iconWidth="@dimen/_60sdp"
                    app:fb_rippleColor="#3359D3"
                    app:fb_shape="circle" />

                <TextView
                    android:id="@+id/timeview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:gravity="center"
                    android:paddingEnd="@dimen/_7sdp"
                    android:text="12/2/2020"
                    android:textColor="#000000"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>