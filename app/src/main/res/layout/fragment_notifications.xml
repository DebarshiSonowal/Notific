<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/comp1"
    android:orientation="vertical"
    tools:context=".ui.notifications.NotificationsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="Notification"
        android:textColor="#ffffff"
        android:textSize="@dimen/_30sdp" />

    <com.vlonjatg.progressactivity.ProgressRelativeLayout
        android:id="@+id/loadingLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:emptyBackgroundColor="#fbc02d"
        tools:errorBackgroundColor="#42a5f5"
        tools:loadingBackgroundColor="#FFFFFF">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/notificrecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF" />
    </com.vlonjatg.progressactivity.ProgressRelativeLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-4889618202360309/2674040893" />

</LinearLayout>